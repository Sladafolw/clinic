@model kurs.Models.Patient
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Patient</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>    <div>
                <label asp-for="Gender" class="control-label"></label>
                <p>
                    <select asp-for="Gender">

                        <option asp-for="Gender" value="Male">Male</option>
                        <option asp-for="Gender" value="Female">Female</option>

                    </select>
                </p>
            </div>

            <input type="hidden" asp-for="CodePatient" />
            <div class="form-group">
                <label asp-for="SpecialSigns" class="control-label"></label>
                <input asp-for="SpecialSigns" class="form-control" />
                <span asp-validation-for="SpecialSigns" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ColorHair" class="control-label"></label>
                <input asp-for="ColorHair" class="form-control" />
                <span asp-validation-for="ColorHair" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApproximateHeight" class="control-label"></label>
                <input asp-for="ApproximateHeight" class="form-control" />
                <span asp-validation-for="ApproximateHeight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

    <div class="aaa">
         <div class="link">
       <div class="Details"><a asp-action="Index">Back to List</a></div> </div>
    </div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}

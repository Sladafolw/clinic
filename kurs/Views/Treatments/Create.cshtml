@model IEnumerable<dynamic>
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Treatment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Receipt Date</label>
                <input type="date" required name ="ReceiptDate" class="form-control" max="@DateTime.Now.ToString("yyyy-MM-dd")" min="@DateTime.Now.ToString("yyyy-MM-dd")" required />

            </div>
            <div class="form-group">
                <label class="control-label">Discharge Date</label>
                <input type="date" name="DischargeDate"  class="form-control" max="@DateTime.Now.ToString("yyyy-MM-dd")" min="@DateTime.Now.ToString("yyyy-MM-dd")" />

            </div>
            <div class="form-group">
                <label class="control-label">Discharge Reason</label>
                <input name="DischargeReason" class="form-control" />

            </div>
            <div class="form-group">
                <label class="control-label">How Delivered Patient</label>
                <input name="HowDeliveredPatient"  required class="form-control" required />

            </div>

            <div class="form-group">
                <label class="control-label">NameDiagnosis</label>

                <p>
                    <select name="NameDiagnosis" required class="form-control">
                        @{
                            foreach (dynamic f in ViewBag.NameDiagnosis)
                            {
                                <option name="NameDiagnosis" value=@f>@f</option>
                            }
                        }
                    </select>
                </p>
            </div>
            <div class="form-group">
                <label class="control-label">Name </label>
                <p>
                    <select name="CodePatient"  required class="form-control">
                        @{
                            foreach (dynamic f in ViewBag.Patients)
                            {

                                <option name="Name" value="@f.Key">@f.Value</option>
                            }
                        }
                    </select>
                </p>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
